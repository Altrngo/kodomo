<div class="container-page">
  <div class="container">
    <div class="text-up">
      <h1><%= @baby.name %></h1>
      <p>Un evénement</p>
    </div>
    <div class="timeline">
      <% @events.each do |event| %>
        <div class="container-timeline left">
          <div class="card event" id="card-timeline">
            <div>
              <h2>Biberon</h2>
              <h2><%= event.type %></h2>
              <p><%= event.start_time.strftime("%m.%d.%Y") %> à <%= event.start_time.strftime("%H:%M") %></p>
              <p><%= event.value_string %></p>
              <p><%= event.value_float.to_i %> ml</p>
              <p><%= event.comment %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

