<div class="container">
  <div>
    <h1><%= @baby.name %></h1>
    <p><%= @age %></p>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to baby_details_path(@baby) do%>
      <div class="card baby-profile-card mb-3" style="background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('<%= cloudinary_url @baby.photo.key %>') ">
        <div class="d-flex justify-content-between">
          <div class="last-eat d-flex align-items-center">
            <i class="fas fa-utensils"></i>
            <p>12:10</p>
          </div>
          <div class="last-sleep d-flex flex-row-reverse align-items-center">
            <i class="fas fa-moon"></i>
            <p>12:25</p>
          </div>
        </div>
        <div class="title-child">
          <p>Fiche enfant</p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  
    <div class="row">
      <div class="col-8">
        <div class="card last-event bg-foot mb-3 d-flex flex-column align-items-end ">
          <div class="title-child">
          <%= link_to baby_event_path(@baby, @event_last), class: "text-decoration" do %>
            <p>Dernier evenement</p>
          <% end %>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card heal-card mb-3 d-flex align-items-center justify-content-center">
          <i class="fas fa-heart"></i>
          <p class="card-title-dark">Santé</p>
        </div>
      </div>
    </div>
  
  <%= link_to event_timeline_baby_path(@baby), class: "text-decoration" do %>
    <div class="row">
      <div class="col">
        <div class="all-events card d-flex flex-row-reverse justify-content-around">
          <div>
            <i class="fas fa-calendar-alt"></i>
          </div>
          <div>
            <p class="card-title-dark">Evenements passés</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
